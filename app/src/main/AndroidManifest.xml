<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kelly.footballmatch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FootBallClub"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.eventpage.detailpage.view.DetailActivity"
            android:parentActivityName=".presentation.MainActivity"/>

        <activity android:name=".presentation.teampage.detailpage.view.TeamDetailActivity"/>

        <activity android:name=".presentation.playerpage.detailpage.PlayerDetailActivity"/>

        <activity android:name=".presentation.eventpage.searchpage.view.FootBallMatchSearchActivity" />
    </application>

</manifest>